      >
        Newer Posts
      </button>
      {{/if}}
      <button
        id="older-posts"
        class="ml-5 bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-blue-700 hover:border-blue-500 rounded-full cursor-pointer"
        style="outline: none"
